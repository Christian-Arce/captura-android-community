<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <!-- the theme applied to the application or activity -->
    <style name="CustomActionBarTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:actionBarTabBarStyle">@style/MyActionBarTab</item>
        <item name="android:actionBarTabTextStyle">@style/MyActionBarTabText</item>
        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/MyActionBar</item>
        <item name="actionBarTabBarStyle">@style/MyActionBarTab</item>
        <item name="actionBarTabTextStyle">@style/MyActionBarTabText</item>
    </style>

    <!-- ActionBar styles -->
    <style name="MyActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">

        <!-- <item name="android:backgroundStacked">@color/mf_actionbar_tab_background</item> -->
        <item name="android:background">@drawable/actionbar_background</item>

        <!-- Support library compatibility -->
        <!-- <item name="backgroundStacked">@color/mf_actionbar_tab_background</item> -->
        <item name="background">@drawable/actionbar_background</item>
    </style>



    <!-- Custom styles Captura -->
    <style name="MyActionBarTab" parent="@style/Widget.AppCompat.Light.ActionBar.TabBar">
        <item name="android:background">@color/mf_actionbar_tab_background</item>
        <item name="background">@color/mf_actionbar_tab_background</item>
    </style>

    <!-- ActionBar tabs text -->
    <style name="MyActionBarTabText" parent="@style/Widget.AppCompat.ActionBar.TabText">
        <item name="android:textColor">@color/mf_actionbar_text</item>
        <!-- The textColor property is backward compatible with the Support Library -->
    </style>

    <style name="Theme.AppCompat.Light.NoActionBar" parent="@style/Theme.AppCompat.Light">
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="FormTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#B0B0B0</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="HeadLineText" parent="@android:style/TextAppearance.Large">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="mf_layout">
        <item name="android:background">@color/mf_background</item>
    </style>

    <style name="mf_button">
        <item name="android:background">@drawable/button</item>
        <item name="android:textColor">@color/mf_button_text_color</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="mf_form_button">
        <item name="android:background">@drawable/form_button</item>
        <item name="android:textColor">@color/mf_button_text_color</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="mf_login"></style>

    <style name="mf_login.version_number">
        <item name="android:textColor">@color/mf_hint_foreground_color</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="mf_home"></style>

    <style name="mf_home.list_item"></style>

    <style name="mf_home.list_item.description_text">
        <item name="android:textColor">#ADADAD</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="mf_home.list_item.text">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="mf_sectioned_list_header_title">
        <item name="android:textColor">@color/mf_sectioned_adapter_header</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="mf_element_label">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">16sp</item>
    </style>
</resources>
